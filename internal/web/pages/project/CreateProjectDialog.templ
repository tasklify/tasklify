templ addProjectMembersDialog(projectID uint, users []database.User, projectMembers []database.User) {
	<div id="create-dialog" class="fixed top-0 left-0 w-full h-full bg-gray-900 bg-opacity-50 flex justify-center items-center z-50">
		<div class="bg-white rounded-lg p-8 shadow-lg md:w-2/5 sm:w-3/5 h-auto">
			<div class="text-center">
				<h2 class="text-xl font-medium mb-4">Add project members</h2>
			</div>
			<div>
				@projectMemberForm(projectID, users)
			</div>
			<div id="member_table_container" class="mt-6">
				@projectMemberTable(projectID, projectMembers)
			</div>
			// <div id="validation-error"></div>
			<div class="mt-4">
				<button class="btn btn-primary btn-sm" type="submit" hx-on:click="dialog_container.close()">I'll add more later</button>
			</div>
		</div>
	</div>
}

templ projectMemberForm(projectID uint, users []database.User) {
	<form hx-post="/project-member" hx-target="#dialog" style="all: unset">
		<input type="hidden" id="projectID" name="projectID" value={ fmt.Sprint(projectID) }/>
		<div class="pt-4 join flex">
			<select
				id="projectUser_user"
				class="select select-bordered select-primary join-item basis-7/12 block p-2 text-sm"
				name="userID"
				if len(users) == 0 {
					disabled="disabled"
				}
				required
			>
				<option hidden disabled selected value>
					if len(users) > 0 {
						Select user
					} else {
						No more users to select
					}
				</option>
				for _, user := range users {
					<option value={ fmt.Sprint(user.ID) }>{ user.FirstName } { user.LastName }</option>
				}
			</select>
			<select
				id="projectUser_role"
				class="select select-bordered select-primary join-item basis-4/12 block p-2 text-sm"
				name="roleID"
				if len(users) == 0 {
					disabled="disabled"
				}
				required
			>
				<option hidden disabled selected value>
					if len(users) > 0 {
						Select project role
					} else {
						/
					}
				</option>
				<option value={ database.ProjectRoleManager.Val }>Project manager</option>
				<option value={ database.ProjectRoleMaster.Val }>Project master</option>
				<option value={ database.ProjectRoleDeveloper.Val }>Project developer</option>
			</select>
			<button
				class="btn btn-primary text-sm join-item basis-1/12"
				type="submit"
				if len(users) == 0 {
					disabled="disabled"
				}
			>Add</button>
		</div>
	</form>
}

templ projectMemberTable(projectID uint, projectMembers []database.User) {
	<h3 class="font-medium text-lg mb-1">Project members</h3>
	<div class="overflow-x-auto block max-h-80">
		<table class="table table-auto overflow-scroll w-full" id="project_members_table">
			<thead class="bg-white sticky top-0">
				<tr>
					<th>User</th>
					<th>Project role</th>
					<th></th>
				</tr>
			</thead>
			<tbody class="max-h-80 overflow-y-auto">
				if len(projectMembers) > 0 {
					for _, projectMember := range projectMembers {
						<tr class="hover">
							<td class="text-gray-950">
								<div class="flex flex-col">
									<span class="font-bold">{ projectMember.FirstName } { projectMember.LastName }</span>
									<span class="text-xs">{ projectMember.Email }</span>
								</div>
							</td>
							<td class="text-gray-950">{ projectMember.ProjectRole.GetLabel() }</td>
							<td style="width: 1%;">
								<form hx-post="/remove-project-member" style="all: unset" hx-target="#dialog">
									<button class="btn btn-xs btn-circle btn-ghost" style="font-size: 12px;">✕</button>
									<input type="hidden" id="removeProjectID" name="projectID" value={ fmt.Sprint(projectID) }/>
									<input type="hidden" id="removeUserID" name="userID" value={ fmt.Sprint(projectMember.ID) }/>
								</form>
							</td>
						</tr>
					}
				} else {
					<tr>
						<td colspan="100%" class="text-center mt-3 text-gray-950">No users added yet</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
